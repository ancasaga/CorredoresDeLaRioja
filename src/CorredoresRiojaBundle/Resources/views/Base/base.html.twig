<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" lang="es-ES">
		<title>{% block title %} Welcome {% endblock %}</title>
		{% block stylesheets %}  
			<!-- <meta name="description" content="Aplicación de prueba de Desarrollo de Aplicaciones para Internet; Máster en Informática; Universidad de La Rioja." lang="es-ES">
			<link href="/bundles/appcorredoresrioja/css/carrerasrioja.css" rel="stylesheet" media="all" type="text/css">-->

			<link href="{{ asset('bundles/corredoresrioja/css/carrerasrioja.css') }}" rel="stylesheet" type="text/css"/>

		{% endblock %}


	</head>

	<body>
		<div class="logo">Carreras por La Rioja</div>

		<div class="sombra">
			<div class="nucleo">
				<div id="lang">
					{% set locale = app.request.locale %}
                                        {% block selector %}
					{% if locale == 'es' %}
						<span>Español</span> &nbsp; | &nbsp;
						<a href="{{ path('corredores_de_la_rioja_corredores_de_la_rioja_portada.en') }}">English</a>
					{% elseif locale == 'en' %}
						<a href="{{ path('corredores_de_la_rioja_corredores_de_la_rioja_portada.es') }}">Español</a> &nbsp; | &nbsp;
						<span>English</span>
					{% endif %}
                                        {% endblock %}
				</div>
			</div>
		</div>

		<div class="barra_menus">	
			<div class="pestanias">
				<div class="grupoPestanias">
					<div class="pestaniaSel"><a href="{{ path('corredores_de_la_rioja_corredores_de_la_rioja_portada.es')}}">{{ 'base.corredores' | trans }}</a></div>
					<div class="pestaniaNoSel"><a href="">{{ 'base.organizadores' | trans }}</a></div>
					<div class="pestaniaNoSel"><a href="http://localhost:8000/admin/dashboard">{{ 'base.intranet' | trans }}</a></div>
				</div>
			</div>

		{% block content %}{% endblock %}
		<div class="clear"></div>  
		<div class="separa"></div>

		<div class="pie">
			<span class="pie_izda">
				<a href="mailto:jonathan.heras@unirioja.es">{{ 'base.contacto' | trans }}</a> </span>
			<span class="pie_dcha">
				&copy; 2017 Ángela Casado García  </span>
			<div class="clear"></div>  
		</div>

	</div>  
</body>
</html>
